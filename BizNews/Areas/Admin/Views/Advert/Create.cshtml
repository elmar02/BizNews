@model Advert

<form method="post" enctype="multipart/form-data">
    
    <div class="form-group">
        <label asp-for="Link"></label>
        <input type="text" asp-for="Link" class="form-control"/>
        <span asp-validation-for="Link" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Photo">Photo</label>
        <div class="w-25">
            <img src="/uploads/noImage.png" id="image_upload_preview" class="img-fluid" />
        </div>
        <input id="inputFile" type="file" accept="image/*" name="Photo" class="form-control" />
        <span class="text-danger">
            @if (@ViewData["Error"] != null)
            {
                @ViewData["Error"]
            }
        </span>
    </div>
    <button type="submit" class="btn btn-warning">Create</button>
</form>