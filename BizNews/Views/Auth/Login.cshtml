@{
    Layout = "_AuthLayout";
}

@model LoginDTO

<h3 class="card-title text-left mb-3">Login</h3>
<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label>Username or email *</label>
        <input asp-for="EmailOrUsername" type="text" class="form-control p_input">
    </div>
    <div class="form-group">
        <label>Password *</label>
        <input asp-for="Password" type="password" class="form-control p_input">
    </div>
    <div class="form-group d-flex align-items-center justify-content-between">
        <div class="form-check">
            <label class="form-check-label">
                <input asp-for="RememberMe" type="checkbox" class="form-check-input"> Remember me
            </label>
        </div>
        <a href="#" class="forgot-pass">Forgot password</a>
    </div>
    <div class="text-center">
        <button type="submit" class="btn btn-primary btn-block enter-btn">Login</button>
    </div>
    <p class="sign-up">Don't have an Account?<a href="/auth/register"> Sign Up</a></p>
</form>